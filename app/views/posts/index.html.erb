<div class='results-container'>
  <div class='container results-container'>
    <div data-controller="select-category">

        <%= simple_fields_for :tag do |n| %>
        <%= n.input :tag,
                    as: :radio_buttons,
                    collection_wrapper_tag: 'div',
                    collection_wrapper_class: 'tag-wrapper',
                    item_wrapper_class: 'tag-item',
                    input_html: {class: 'tag-selector', data: { action:"click->select-category#showDropdown" }},
                    collection: Post::CATEGORIES %>

        <div class="d-none" data-select-category-target="roles">
          <%= n.input :postableRoles,
                      collection_wrapper_tag: 'div',
                      collection_wrapper_class: 'tag-wrapper',
                      item_wrapper_class: 'tag-item-2',
                      input_html: {class: "tag-selector-roles"},
                      label:"Roles",
                      collection: Role.all,
                      as: :check_boxes
          %>
        </div>

        <div class="d-none" data-select-category-target="skills">
          <%= n.input :postableSkills,
                      collection_wrapper_tag: 'div',
                      collection_wrapper_class: 'tag-wrapper',
                      item_wrapper_class: 'tag-item-2',
                      input_html: {class: "tag-selector-skills"},
                      label:"Skills",
                      collection: Skill.all,
                      as: :check_boxes
          %>
        </div>
        <% end %>
    </div>
  </div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div class="posts-title">
        <h1 id="results">Results</h1>
      </div>
      <% @posts.each do |post| %>
        <div class="post">
          <%# if post.chef_profile.meal_picture_url %>
            <%#= image_tag booking.chef_profile.meal_picture_url%>
          <%# else %>
            <%#= cl_image_tag booking.chef_profile.photo.key, crop: :fill %>
          <%# end %>
          <%= image_tag "https://uploads.sitepoint.com/wp-content/uploads/2017/03/1488480428eloquent-js.jpg",  class: "card-trip-user" %>
          <div class="post-content">
            <div class="post-text">
              <h2> <%= post.title %> </h2>
              <p><%= post.blurb %></p>
            </div>
            <div class="author">
              <p>Author: <strong><%= User.find(post.user_id).username %></strong></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  <% if @posts.empty? %>
    <h1 id="no-chef">No posts at the moment üôÅ</h1>
  <% end %>
</div>
