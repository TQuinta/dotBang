<div>
  <% if bookmark && bookmark.persisted? %>
    <%= link_to bookmark_path(bookmark), method: :delete, class: "bookmark" do %>
          <i class="fas fa-solid fa-bookmark"></i>
    <% end %>
  <% else %>
    <%= link_to post_bookmarks_path(post), method: :post, class: "bookmark" do %>
          <i class="far fa-bookmark"></i>
    <% end %>
  <% end %>
</div>
