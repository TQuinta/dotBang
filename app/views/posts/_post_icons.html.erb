<div id="icons-top-right">
  <div class="btn btn-primary">
    <i class="exclamation fas fa-exclamation"></i>
    <div class="exclamation" data-controller="post-upvote">
      <div data-post-upvote-target="count">
        <p class="count"><%= pluralize(@post.votes.count, "vote") %></p>
      </div>
        <%= render "upvote" %>
    </div>
  </div>
  <div class="comment btn btn-primary">
    <i class="far fa-comment-alt"></i>
  </div>
  <div class="bookmark btn btn-primary">
    <i class="far fa-bookmark"></i>
  </div>
</div>
